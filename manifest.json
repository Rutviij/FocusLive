{
  "manifest_version": 3,
  "name": "Focus Tracker",
  "description": "Track your productivity and stay motivated.",
  "version": "1.0",
  "permissions": ["tabs", "storage", "activeTab"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "host_permissions": ["<all_urls>"]
}
